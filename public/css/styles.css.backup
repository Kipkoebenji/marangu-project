/* Basic responsive styles for the marangu e-commerce demo */
* {
  box-sizing: border-box;
}
body {
  font-family: Arial, Helvetica, sans-serif;
  margin: 0;
  color: #222;
}
header {
  background: #0b74de;
  color: white;
  padding: 12px 18px;
}
.header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1100px;
  margin: 0 auto;
}
.brand {
  font-weight: 700;
  font-size: 1.2rem;
}
.nav {
  display: flex;
  gap: 12px;
  align-items: center;
}
.nav a {
  color: white;
  text-decoration: none;
  padding: 6px 8px;
}
.search {
  margin-left: 12px;
}
.search input {
  padding: 6px;
  border-radius: 4px;
  border: 1px solid rgba(0, 0, 0, 0.15);
}
.container {
  max-width: 1100px;
  margin: 20px auto;
  padding: 0 12px;
}
.grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: 16px;
}
.card {
  border: 1px solid #e6e6e6;
  border-radius: 6px;
  padding: 12px;
  background: white;
  display: flex;
  flex-direction: column;
}
.card img {
  width: 100%;
  height: 160px;
  object-fit: cover;
  border-radius: 4px;
}
.card h3 {
  margin: 8px 0 4px;
  font-size: 1rem;
}
.card .price {
  font-weight: 700;
  color: #0b74de;
}
.btn {
  display: inline-block;
  background: #0b74de;
  color: white;
  padding: 8px 12px;
  border-radius: 4px;
  text-decoration: none;
}
.footer {
  background: #f6f6f6;
  padding: 20px 12px;
  margin-top: 30px;
}
.banner {
  background: #fdebd3;
  padding: 18px;
  border-radius: 6px;
  margin-bottom: 18px;
}
.product-detail {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}
@media (max-width: 800px) {
  .product-detail {
    grid-template-columns: 1fr;
  }
}
.cart-table {
  width: 100%;
  border-collapse: collapse;
}
.cart-table th,
.cart-table td {
  padding: 8px;
  border: 1px solid #eaeaea;
}
.form-row {
  margin-bottom: 12px;
}
.input,
input[type="text"],
input[type="email"],
input[type="number"],
textarea,
select {
  width: 100%;
  padding: 8px;
  border-radius: 4px;
  border: 1px solid #ddd;
}
.topbar-actions {
  display: flex;
  gap: 8px;
  align-items: center;
}
.badge {
  background: #ff5a5f;
  color: white;
  padding: 2px 6px;
  border-radius: 12px;
  font-size: 0.8rem;
}
/* small tweaks */
.product-meta {
  color: #666;
  font-size: 0.9rem;
}
.admin-header {
  background: #222;
  color: white;
  padding: 12px;
}
.admin-nav a {
  color: white;
  margin-right: 8px;
}
